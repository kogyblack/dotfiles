[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close = cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = i3-nagbar -t warning -m 'Reboot ?' -b 'Sure' 'reboot'
menu-0-1 = power off
menu-0-1-exec = i3-nagbar -t warning -m 'Poweroff ?' -b 'Sure' 'sudo poweroff'

